<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="343dp"
    android:layout_height="wrap_content"

    android:layout_gravity="center"
    android:background="@drawable/meeting_reminder_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/meeting_reminder_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/listview_item_height"
        android:background="@drawable/reminder_title_bg"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/title_text_size" />

    <frtc.sdk.ui.view.FixItemListView
        android:id="@+id/meeting_reminder_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:maxHeight="240dp"
        android:paddingHorizontal="@dimen/listview_padding_horizontal_1"
        android:divider="@color/divider_color"
        android:dividerHeight="0.5dp"
        android:fadingEdgeLength="0dp"
        android:visibility="visible"/>

    <Button
        android:id="@+id/ignore_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/listview_item_height"

        android:background="@drawable/meeting_reminder_ignore_btn_bg"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/meeting_reminders_ignore_btn"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="@dimen/title_text_size_1" />

</LinearLayout>
