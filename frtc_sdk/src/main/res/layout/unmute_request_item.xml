<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listview_item_height"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12.5dp"
        android:src="@drawable/call_icon_avatar" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/permission"
            android:ellipsize="end"
            android:lines="1"
            android:layout_gravity="center_vertical|start"
            android:textColor="@color/text_color_bold"
            android:textSize="@dimen/button_text_size"
            />

        <TextView
            android:id="@+id/permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="5dp"
            android:lines="1"
            android:text="@string/participants_permissions_dlg_unmute_content"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/button_text_size" />

    </RelativeLayout>

    <Button
        android:id="@+id/agree_btn"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/single_white_btn"
        android:gravity="center"
        android:text="@string/participants_permissions_dlg_content_ok_btn"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="16sp" />

</LinearLayout>
