            android:layout_height="48dp"
            android:paddingStart="20dp"
            android:textColor="@color/text_color_common"
            android:textSize="@dimen/title_text_size_1"
            android:gravity="center_vertical"
            android:background="@drawable/menu_item_bg"
            android:text="@string/rate_2560K"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rate_2m" />

        <ImageView
            android:id="@+id/rate_2560k_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:paddingEnd="20dp"
            android:src="@drawable/icon_selected"
            app:layout_constraintBottom_toBottomOf="@+id/rate_2560k"
            app:layout_constraintEnd_toEndOf="@+id/rate_2560k"
            app:layout_constraintTop_toTopOf="@+id/rate_2560k"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/rate_3m"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingStart="20dp"
            android:textColor="@color/text_color_common"
            android:textSize="@dimen/title_text_size_1"
            android:gravity="center_vertical"
            android:background="@drawable/menu_item_bg"
            android:text="@string/rate_3m"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rate_2560k" />

        <ImageView
            android:id="@+id/rate_3m_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:paddingEnd="20dp"
            android:src="@drawable/icon_selected"
            app:layout_constraintBottom_toBottomOf="@+id/rate_3m"
            app:layout_constraintEnd_toEndOf="@+id/rate_3m"
            app:layout_constraintTop_toTopOf="@+id/rate_3m"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/rate_4m"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingStart="20dp"
