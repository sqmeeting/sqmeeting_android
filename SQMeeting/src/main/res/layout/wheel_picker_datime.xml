<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <com.frtc.sqmeetingce.ui.picker.wheelpicker.widget.DateWheelLayout
        android:id="@+id/wheel_picker_date_wheel"
        style="@style/WheelDefault"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2" />

    <com.frtc.sqmeetingce.ui.picker.wheelpicker.widget.TimeWheelLayout
        android:id="@+id/wheel_picker_time_wheel"
        style="@style/WheelDefault"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" />

</LinearLayout>
