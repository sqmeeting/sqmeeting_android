<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:id="@android:id/background" >
    <shape>
      <corners android:radius="5dip" />
      <gradient android:angle="270" android:centerColor="@color/progress_bg"
        android:centerY="0.75" android:endColor="@color/progress_bg"
        android:startColor="@color/progress_bg" />
    </shape>
  </item>


  <item android:id="@android:id/progress">
    <clip>
      <shape>
        <corners android:radius="5dip" />
        <gradient android:angle="270" android:centerColor="@color/progress_green"
          android:centerY="0.75" android:endColor="@color/progress_green"
          android:startColor="@color/progress_green" />
      </shape>
    </clip>
  </item>

</layer-list>